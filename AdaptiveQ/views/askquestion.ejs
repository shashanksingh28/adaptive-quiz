function tree_ajax(myUrl) {
	var ajx;
	ajx = new XMLHttpRequest();
	ajx.onreadystatechange = function() {
		if (ajx.readyState == 4 && ajx.status == 200) {
		var data=[];
			data.push(JSON.parse(ajx.responseText.replace("\n", "")));
			//console.log(data);
			$('#tree1').tree({
				data:data
			});
			$('#tree1').bind('tree.click',
			function(event) {
				// The clicked node is 'event.node'
				var node = event.node;
				$("#conceptId").val(node.name);
			});
		}
	}
	ajx.open("GET", myUrl, true);
	ajx.send();
}

