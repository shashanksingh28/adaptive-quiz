function addOption(){
	var options=$(".option").length+1;
	if(options<7){
		var dom="<div class=\"option input-group\"><span class=\"input-group-addon\"><input type=\"checkbox\"  class=\"checko\" id=\"answer"+options+"\"></span><input type=\"text\" class=\"form-control optiono\"  id=\"option"+options+"\" placeholder=\"Option "+options+"\"></div>";
		$("#options").append(dom);
	}
}

function removeOption(){
	var maxIndex=$(".option").length;
	if(maxIndex>2){
		$(".option")[maxIndex-1].remove();
	}
}

function clearForm(){
	$('#tree1').tree('selectNode',null);
	$("#conceptId").val("");
	var $tree = $('#tree1');
	var tree = $tree.tree('getTree');
	tree.iterate(function(node) {

		if (node.hasChildren()) {
		  $tree.tree('closeNode', node, true);
		}
		return true;
	});
	this.askQuestion.reset();
// 	$("#askQuestion").reset();
}

function sub(){
	if($("#question").val()==""){
		alert("Empty question");
		return;
	}
	
	var options = $(".optiono");
	var arrOption=[];
	for(i=0;i<options.length;i++)
	{
		if(options[i].value==""){
			alert("Empty option");
			return;
		}
		arrOption.push(options[i].value)
	}
	$("#optionId").val(JSON.stringify(arrOption));
	
	var checks = $(".checko");
	var arrCheck=[];
	nonechecked=true;
	for(i=0;i<checks.length;i++)
	{
		if(checks[i].checked){
			arrCheck.push(i);
			nonechecked=false;
		}
	}
	if(nonechecked){
		alert("No options are checked");
		return;
	}
	$("#checkId").val(JSON.stringify(arrCheck));
	
	if($('#difficultyo0').is(':checked'))
		$('#difficulty').val(0);
	else if($('#difficultyo1').is(':checked'))
		$('#difficulty').val(1);
	else if($('#difficultyo2').is(':checked'))
		$('#difficulty').val(2);

	if($("#conceptId").val()==""){
		alert("No concept is selected");
		return;
	}
	$("#askQuestion").submit();
}

