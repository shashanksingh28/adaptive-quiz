<!-- Pen Title-->
<div class="pen-title">
  <h1>AdaptQ: Quiz of the Day</h1>

</div>
<!-- Form Module-->
<div class="module form-module">
  <div class="toggle"><i class="fa fa-times fa-pencil"></i>
    <div class="tooltip">Register</div>
  </div>
  <div class="form">
    <h2>Login to your account</h2>
    <form class="form-signin" action="/" method="post" onsubmit="return hash()">
      <input type="email" placeholder="Username" name="email" />
      <input type="password" placeholder="Password" id="password" name="password" />
      <label class="checkbox"><input type="checkbox" name="checkbox" value="value" id="rem"/>Remember Me</label>
      <br><br>
     <button>Login</button>
    </form>
  </div>
  <div class="form">
    <h2>Create an account</h2>
    <form action="/register" method="post" onsubmit="return newhash()">
      <input type="text" placeholder="Full Name" name="username"/>
      <input type="password" placeholder="Password" name="password" id="new_password"/>
      <input type="password" placeholder="Confirm Password" id="new_password_confirm"/>
      <input type="email" placeholder="Email Address" name="email"/>
      <input type="tel" placeholder="Phone Number" name="phone"/>
      <button>Register</button>
    </form>
  </div>
